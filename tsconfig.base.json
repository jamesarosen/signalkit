// Common TypeScript config for the workspace root and all its projects
{
	"compilerOptions": {
		"emitDecoratorMetadata": true,
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"jsx": "react-jsx",
		"moduleResolution": "node",
		"noUnusedLocals": true,
		"skipLibCheck": true,
		"sourceMap": true,
		"strict": true,
		"strictNullChecks": true
	}
}
